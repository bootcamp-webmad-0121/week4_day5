<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar {{title}}</h1>

            <hr>

            <form method="POST" action="/libros/editar/{{id}}">

                <div class="form-group">
                    <label for="title">Título</label>
                    <input name="title" type="text" class="form-control" id="title" value="{{title}}">
                </div>

                <div class="form-group">
                    <label for="author">Autor</label>
                    <input name="author" type="text" class="form-control" id="author" value="{{author}}">
                </div>

                <div class="form-group">
                    <label for="desc">Descripción</label>
                    <input name="description" type="text" class="form-control" id="desc" value="{{description}}">
                    <small class="form-text text-muted">Preferiblemente usa la descripción de IMDB.</small>
                </div>

                <div class="form-group">
                    <label for="rating">Puntuación</label>
                    <input name="rating" type="number" class="form-control" id="rating" value="{{rating}}">
                </div>
                <button type="submit" class="btn btn-dark">Guardar edición</button>
                <a href="/libros/listado" class="btn btn-outline-dark">Volver</a>
            </form>

        </div>
    </div>


</div>