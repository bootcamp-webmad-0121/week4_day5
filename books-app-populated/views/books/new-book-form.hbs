<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Nuevo libro</h1>

            <hr>

            <form method="POST" action="/libros/nuevo-libro">

                <div class="form-group">
                    <label for="title">Título</label>
                    <input name="title" type="text" class="form-control" id="title">
                </div>

                <div class="form-group">
                    <label for="author">Autor</label>
                    <input name="author" type="text" class="form-control" id="author">
                </div>

                <div class="form-group">
                    <label for="desc">Descripción</label>
                    <input name="description" type="text" class="form-control" id="desc">
                    <small class="form-text text-muted">Preferiblemente usa la descripción de IMDB.</small>
                </div>

                <div class="form-group">
                    <label for="rating">Puntuación</label>
                    <input name="rating" type="number" class="form-control" id="rating">
                </div>

                <button type="submit" class="btn btn-dark">Crear nuevo libro</button>
            </form>

        </div>
    </div>


</div>