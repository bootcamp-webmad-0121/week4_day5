<div class="container">

    <h1>Detalles de {{title}}</h1>

    <hr>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3>Especificaciones</h3>
            <hr>
            <p>Título: {{title}}</p>
            <p>Descripción: {{description}}</p>
            <p>Puntuación: {{rating}}</p>
        </div>
        <div class="col-md-4">
            <h3>Autor/es</h3>
            <hr>

            {{#each author}}
            <figure class="autor">
                <img src="{{pictureUrl}}" alt="{{name}} {{lastName}}">
                <figcaption>
                    <p>{{name}} {{lastName}} ({{nationality}})</p>
                </figcaption>
            </figure>
            {{/each}}
        </div>
    </div>


    <hr>

    <a class="btn btn-dark" href="/libros/listado">Volver al listado</a>
</div>